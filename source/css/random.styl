desktopWidth = 720px
mobildWidth = 100%
body {
  background-color: #BDC3C7;
  margin: 0px;
  font-family: arial,sans-serif;
  font-size: 16px;
}

a {
  text-decoration: none;
  color: #3A539B;
}

a:hover {
  background-color: #1E8BC3; 
  color: #fff;
  text-decoration: underline;
}

#container {
  width: desktopWidth;
  background-color: #fff;
  position: absolute;
  left: 50%;
  margin-left: - (desktopWidth / 2);
}

#menu-outer, #bottom-outer {
  opacity: 0.85;
}

#content-outer {
}

.random-center {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -360px;
  margin-top: -200px;
  width: desktopWidth;
}

#random-index {
  margin: 20px;
  text-align: center;
  border-radius: 10px;
  background-color: #ecf0f1;
  opacity: 0.85;
}

#random-index a {
  text-transform: uppercase;
  padding: 5px;
}

.title {
  font-size: 28px;
  font-weight: 300px;
  font-color: #34495e;
  text-shadow: 0 2px rgb(127, 140, 141);
  padding-bottom: 5px;
}

.title a {
  color: #34495e;
}

.title a:hover {
  color: #34495e;
  text-decoration: none;
  background-color: transparent;
}

.sub-title {
  font-weight: none;
  padding-bottom: 10px;
}

#random-index ul {
  list-style: none;
  padding: 5px 0px 30px 0px;
}

#random-index ul li {
  display: inline;
  padding-left: 5px;
}

#random-index hr {
  width: 75%;
  color: #7f8c8d;
  margin: 0px auto;
}

.center-field {
  margin: 0 auto;
}

.avatar {
  margin-top: -70px;
  border: 2px solid white;
  border-radius: 60px;
  background-color: #ecf0f1;
  box-shadow: 0 0px 3px 1px rgba(0,0,0,0.3);
}

.content {
  width: 840px;
  background-color: #fff;
  margin-top: 0px;
  padding: 40px 20px 40px 20px; 
}
